<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ shop.name }} - {{ 'general.password_page.title' | t }}</title>
  {{ 'base.css' | asset_url | stylesheet_tag }}
  {{ content_for_header }}
  <style>
    .password-page {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem;
      text-align: center;
      background: #000;
      color: #fff;
    }
    .password-page__logo {
      font-size: 2rem;
      font-weight: 900;
      letter-spacing: -0.05em;
      font-style: italic;
      margin-bottom: 2rem;
    }
    .password-page__heading {
      font-size: 1.5rem;
      font-weight: 700;
      margin: 0 0 1rem;
    }
    .password-page__text {
      color: #9ca3af;
      margin: 0 0 2rem;
      max-width: 400px;
    }
    .password-page__form {
      width: 100%;
      max-width: 300px;
    }
    .password-page__input {
      width: 100%;
      padding: 1rem;
      font-size: 0.875rem;
      border: 1px solid #374151;
      background: transparent;
      color: #fff;
      margin-bottom: 1rem;
    }
    .password-page__input::placeholder {
      color: #6b7280;
    }
    .password-page__button {
      width: 100%;
      padding: 1rem;
      font-size: 0.75rem;
      font-weight: 900;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      background: #fff;
      color: #000;
      border: none;
      cursor: pointer;
    }
    .password-page__footer {
      margin-top: 3rem;
      font-size: 0.75rem;
      color: #6b7280;
    }
    .password-page__footer a {
      color: #fff;
    }
  </style>
</head>
<body>
  <div class="password-page">
    <div class="password-page__logo">{{ shop.name }}</div>
    <h1 class="password-page__heading">{{ 'general.password_page.opening_soon' | t }}</h1>
    <p class="password-page__text">{{ 'general.password_page.spread_the_word' | t }}</p>

    {% form 'storefront_password', class: 'password-page__form' %}
      <input type="password" name="password" placeholder="{{ 'general.password_page.password_placeholder' | t }}" class="password-page__input">
      <button type="submit" class="password-page__button">{{ 'general.password_page.enter' | t }}</button>
      {% if form.errors %}
        <p style="color: #ef4444; margin-top: 1rem;">{{ form.errors.messages.password }}</p>
      {% endif %}
    {% endform %}

    <div class="password-page__footer">
      {{ 'general.password_page.admin_link_html' | t }}
    </div>
  </div>
</body>
</html>
