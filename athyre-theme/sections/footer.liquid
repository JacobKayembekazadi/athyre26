<footer class="footer section-{{ section.id }}">
  <div class="container">
    <div class="footer__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'menu' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul class="footer__menu">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>

          {%- when 'social' -%}
            <div class="footer__column footer__column--social" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              {%- endif -%}
              <div class="footer__social">
                {%- if settings.social_instagram != blank -%}
                  <a href="{{ settings.social_instagram }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Instagram">
                    {% render 'icon', icon: 'instagram', size: 18 %}
                  </a>
                {%- endif -%}
                {%- if settings.social_facebook != blank -%}
                  <a href="{{ settings.social_facebook }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Facebook">
                    {% render 'icon', icon: 'facebook', size: 18 %}
                  </a>
                {%- endif -%}
                {%- if settings.social_twitter != blank -%}
                  <a href="{{ settings.social_twitter }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="Twitter">
                    {% render 'icon', icon: 'twitter', size: 18 %}
                  </a>
                {%- endif -%}
                {%- if settings.social_youtube != blank -%}
                  <a href="{{ settings.social_youtube }}" class="footer__social-link" target="_blank" rel="noopener" aria-label="YouTube">
                    {% render 'icon', icon: 'youtube', size: 18 %}
                  </a>
                {%- endif -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
      </p>
      <div class="footer__legal">
        {%- if section.settings.privacy_link != blank -%}
          <a href="{{ section.settings.privacy_link }}">{{ 'footer.privacy' | t }}</a>
        {%- endif -%}
        {%- if section.settings.terms_link != blank -%}
          <a href="{{ section.settings.terms_link }}">{{ 'footer.terms' | t }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% style %}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    border-top: 1px solid var(--color-border);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 3rem;
      margin-bottom: 5rem;
    }
  }

  @media (min-width: 1024px) {
    .footer__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer__heading {
    font-size: 0.5625rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #9ca3af;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .footer__heading {
      font-size: 0.625rem;
      letter-spacing: 0.3em;
      margin-bottom: 1.5rem;
    }
  }

  .footer__menu {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__menu li {
    margin-bottom: 0.75rem;
  }

  @media (min-width: 768px) {
    .footer__menu li {
      margin-bottom: 1rem;
    }
  }

  .footer__link {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }

  @media (min-width: 768px) {
    .footer__link {
      font-size: 0.875rem;
      letter-spacing: 0.1em;
    }
  }

  .footer__link:hover {
    color: #9ca3af;
  }

  .footer__column--social {
    grid-column: span 2;
  }

  @media (min-width: 1024px) {
    .footer__column--social {
      grid-column: span 1;
    }
  }

  .footer__social {
    display: flex;
    gap: 0.75rem;
  }

  @media (min-width: 768px) {
    .footer__social {
      gap: 1rem;
    }
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border: 1px solid #e5e7eb;
    color: inherit;
    transition: all 0.2s;
  }

  .footer__social-link:hover {
    background-color: #000;
    color: #fff;
    border-color: #000;
  }

  .footer__bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  @media (min-width: 768px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
      padding-top: 2.5rem;
    }
  }

  .footer__copyright {
    font-size: 0.5625rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #9ca3af;
    margin: 0;
  }

  @media (min-width: 768px) {
    .footer__copyright {
      font-size: 0.625rem;
      letter-spacing: 0.1em;
    }
  }

  .footer__legal {
    display: flex;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .footer__legal {
      gap: 2rem;
    }
  }

  .footer__legal a {
    font-size: 0.5625rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #9ca3af;
    text-decoration: none;
    transition: color 0.2s;
  }

  @media (min-width: 768px) {
    .footer__legal a {
      font-size: 0.625rem;
      letter-spacing: 0.1em;
    }
  }

  .footer__legal a:hover {
    color: #000;
  }
{% endstyle %}

