{%- comment -%}
  Product card snippet
  Usage: {% render 'product-card', product: product %}
  Optional: show_quick_add, show_vendor, show_rating
{%- endcomment -%}

{%- liquid
  assign show_quick_add = show_quick_add | default: true
  assign show_vendor = show_vendor | default: false
  assign show_rating = show_rating | default: true

  assign featured_image = product.featured_image
  assign second_image = product.images[1]
-%}

<div class="product-card" data-product-card data-product-id="{{ product.id }}">
  <a href="{{ product.url }}" class="product-card__link">
    <div class="product-card__image-wrapper">
      {%- if featured_image != blank -%}
        <img
          src="{{ featured_image | image_url: width: 600 }}"
          srcset="{{ featured_image | image_url: width: 300 }} 300w,
                  {{ featured_image | image_url: width: 600 }} 600w,
                  {{ featured_image | image_url: width: 900 }} 900w"
          sizes="(min-width: 1024px) 25vw, (min-width: 768px) 33vw, 50vw"
          alt="{{ featured_image.alt | escape }}"
          loading="lazy"
          class="product-card__image product-card__image--primary"
          width="{{ featured_image.width }}"
          height="{{ featured_image.height }}"
        >
        {%- if second_image != blank -%}
          <img
            src="{{ second_image | image_url: width: 600 }}"
            alt="{{ second_image.alt | escape }}"
            loading="lazy"
            class="product-card__image product-card__image--secondary"
            width="{{ second_image.width }}"
            height="{{ second_image.height }}"
          >
        {%- endif -%}
      {%- else -%}
        {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
      {%- endif -%}

      {%- comment -%} Badges {%- endcomment -%}
      {%- if product.available == false -%}
        <span class="product-card__badge product-card__badge--sold-out">{{ 'products.sold_out' | t }}</span>
      {%- elsif product.tags contains 'new' or product.created_at > 'now' | date: '%s' | minus: 2592000 | date: '%Y-%m-%d' -%}
        <span class="product-card__badge product-card__badge--new">{{ 'products.new' | t }}</span>
      {%- endif -%}

      {%- comment -%} Quick Add - Desktop {%- endcomment -%}
      {%- if show_quick_add and product.available -%}
        <div class="product-card__quick-add md-block">
          {%- if product.has_only_default_variant -%}
            <form action="/cart/add" method="post" data-product-form>
              <input type="hidden" name="id" value="{{ product.first_available_variant.id }}">
              <button type="submit" class="product-card__quick-add-btn">
                {% render 'icon', icon: 'plus', size: 14 %}
                {{ 'products.quick_add' | t }}
              </button>
            </form>
          {%- else -%}
            <button class="product-card__quick-add-btn" data-quick-add-toggle>
              {% render 'icon', icon: 'plus', size: 14 %}
              {{ 'products.quick_add' | t }}
            </button>
            <div class="product-card__size-selector" data-size-selector hidden>
              <p class="product-card__size-label">{{ 'products.select_size' | t }}</p>
              <div class="product-card__sizes">
                {%- for variant in product.variants -%}
                  {%- if variant.available -%}
                    <button
                      class="product-card__size-btn"
                      data-variant-id="{{ variant.id }}"
                      data-add-to-cart
                    >
                      {{ variant.title }}
                    </button>
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
          {%- endif -%}
        </div>

        {%- comment -%} Quick Add - Mobile {%- endcomment -%}
        <button class="product-card__quick-add-mobile md-hidden" data-quick-add-toggle-mobile aria-label="{{ 'products.quick_add' | t }}">
          {% render 'icon', icon: 'plus', size: 16 %}
        </button>
        <div class="product-card__size-selector-mobile md-hidden" data-size-selector-mobile hidden>
          <p class="product-card__size-label">{{ 'products.select_size' | t }}</p>
          <div class="product-card__sizes">
            {%- for variant in product.variants -%}
              {%- if variant.available -%}
                <button
                  class="product-card__size-btn"
                  data-variant-id="{{ variant.id }}"
                  data-add-to-cart
                >
                  {{ variant.title }}
                </button>
              {%- endif -%}
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>

    <div class="product-card__info">
      <div class="product-card__header">
        <h3 class="product-card__title">{{ product.title }}</h3>
        <p class="product-card__price">
          {%- if product.compare_at_price > product.price -%}
            <span class="product-card__price--compare">{{ product.compare_at_price | money }}</span>
          {%- endif -%}
          {{ product.price | money }}
        </p>
      </div>

      {%- if show_vendor and product.vendor -%}
        <p class="product-card__vendor">{{ product.vendor }}</p>
      {%- endif -%}

      {%- if show_rating -%}
        <div class="product-card__rating">
          <div class="star-rating">
            {%- for i in (1..5) -%}
              {%- if i <= 4 -%}
                {% render 'icon', icon: 'star-filled', size: 10 %}
              {%- else -%}
                {% render 'icon', icon: 'star', size: 10 %}
              {%- endif -%}
            {%- endfor -%}
          </div>
          <span class="product-card__review-count">({{ product.metafields.reviews.count | default: '0' }})</span>
        </div>
      {%- endif -%}

      {%- comment -%} Color swatches {%- endcomment -%}
      {%- if product.options_by_name['Color'].values.size > 0 -%}
        <div class="product-card__colors">
          {%- for color in product.options_by_name['Color'].values -%}
            {%- assign color_handle = color | handleize -%}
            <span
              class="color-swatch color-swatch--{{ color_handle }}"
              title="{{ color }}"
            ></span>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </a>
</div>

<style>
  .product-card {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .product-card__link {
    text-decoration: none;
    color: inherit;
  }

  .product-card__image-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
    overflow: hidden;
    background-color: #f3f4f6;
    border-radius: 0.5rem;
  }

  @media (min-width: 768px) {
    .product-card__image-wrapper {
      border-radius: 0;
    }
  }

  .product-card__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s, opacity 0.3s;
  }

  .product-card__image--secondary {
    opacity: 0;
  }

  .product-card:hover .product-card__image--primary {
    transform: scale(1.05);
  }

  .product-card:hover .product-card__image--secondary {
    opacity: 1;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
  }

  .product-card__badge {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    padding: 0.125rem 0.5rem;
    font-size: 0.5rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: #fff;
    color: #000;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  }

  @media (min-width: 768px) {
    .product-card__badge {
      top: 1rem;
      left: 1rem;
      padding: 0.25rem 0.75rem;
      font-size: 0.625rem;
    }
  }

  /* Quick Add - Desktop */
  .product-card__quick-add {
    position: absolute;
    inset-inline: 0;
    bottom: 0;
    padding: 1rem;
    transform: translateY(1rem);
    opacity: 0;
    transition: all 0.3s;
    display: none;
  }

  @media (min-width: 768px) {
    .product-card__quick-add {
      display: block;
    }
  }

  .product-card:hover .product-card__quick-add {
    transform: translateY(0);
    opacity: 1;
  }

  .product-card__quick-add-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: #000;
    color: #fff;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
  }

  .product-card__quick-add-btn:hover {
    background: #1f2937;
  }

  .product-card__size-selector {
    background: #fff;
    padding: 0.75rem;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 0.25);
  }

  .product-card__size-label {
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    text-align: center;
    color: #9ca3af;
    margin: 0 0 0.75rem;
  }

  .product-card__sizes {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .product-card__size-btn {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 700;
    background: #fff;
    border: 1px solid #e5e7eb;
    cursor: pointer;
    transition: all 0.2s;
  }

  .product-card__size-btn:hover {
    background: #000;
    color: #fff;
  }

  /* Quick Add - Mobile */
  .product-card__quick-add-mobile {
    position: absolute;
    bottom: 0.5rem;
    right: 0.5rem;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(4px);
    border: none;
    border-radius: 50%;
    box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1);
    cursor: pointer;
  }

  @media (min-width: 768px) {
    .product-card__quick-add-mobile {
      display: none;
    }
  }

  .product-card__size-selector-mobile {
    position: absolute;
    inset-inline: 0.5rem;
    bottom: 3rem;
    background: #fff;
    padding: 0.75rem;
    border-radius: 0.5rem;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 0.25);
  }

  @media (min-width: 768px) {
    .product-card__size-selector-mobile {
      display: none;
    }
  }

  .product-card__size-selector-mobile .product-card__size-btn {
    width: 2rem;
    height: 2rem;
    font-size: 0.625rem;
    border-radius: 0.25rem;
  }

  /* Info */
  .product-card__info {
    padding: 0.5rem 0;
  }

  @media (min-width: 768px) {
    .product-card__info {
      padding: 1rem 0;
    }
  }

  .product-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 0.5rem;
    margin-bottom: 0.125rem;
  }

  @media (min-width: 768px) {
    .product-card__header {
      margin-bottom: 0.25rem;
    }
  }

  .product-card__title {
    font-size: 0.75rem;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.01em;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s;
  }

  @media (min-width: 768px) {
    .product-card__title {
      font-size: 0.875rem;
    }
  }

  .product-card:hover .product-card__title {
    color: #4b5563;
  }

  .product-card__price {
    font-size: 0.75rem;
    font-weight: 700;
    margin: 0;
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .product-card__price {
      font-size: 0.875rem;
    }
  }

  .product-card__price--compare {
    text-decoration: line-through;
    color: #9ca3af;
    margin-right: 0.25rem;
  }

  .product-card__vendor {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #9ca3af;
    margin: 0 0 0.5rem;
  }

  .product-card__rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  @media (min-width: 768px) {
    .product-card__rating {
      gap: 0.5rem;
    }
  }

  .product-card__review-count {
    font-size: 0.5625rem;
    font-weight: 500;
    color: #9ca3af;
  }

  @media (min-width: 768px) {
    .product-card__review-count {
      font-size: 0.625rem;
    }
  }

  .product-card__colors {
    display: flex;
    gap: 0.25rem;
    margin-top: 0.5rem;
  }

  @media (min-width: 768px) {
    .product-card__colors {
      gap: 0.375rem;
      margin-top: 0.75rem;
    }
  }

  .color-swatch {
    width: 0.625rem;
    height: 0.625rem;
    border-radius: 50%;
    border: 1px solid #f3f4f6;
  }

  @media (min-width: 768px) {
    .color-swatch {
      width: 0.75rem;
      height: 0.75rem;
    }
  }

  .color-swatch--black { background-color: #000; }
  .color-swatch--navy { background-color: #1e3a5f; }
  .color-swatch--cherry { background-color: #991b1b; }
  .color-swatch--gray { background-color: #9ca3af; }
  .color-swatch--white { background-color: #fff; border-color: #e5e7eb; }

  /* Star rating */
  .star-rating {
    display: flex;
    gap: 0.0625rem;
  }

  .star-rating svg {
    width: 0.625rem;
    height: 0.625rem;
    color: #000;
  }

  .star-rating svg.empty {
    color: #e5e7eb;
  }

  /* Utility classes */
  .md-block {
    display: none;
  }

  @media (min-width: 768px) {
    .md-block {
      display: block;
    }
    .md-hidden {
      display: none;
    }
  }
</style>
