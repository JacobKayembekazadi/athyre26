{%- comment -%}
  Icon snippet - renders SVG icons
  Usage: {% render 'icon', icon: 'search' %}
  Optional: size parameter (default: 20)
{%- endcomment -%}

{%- liquid
  assign icon_size = size | default: 20
-%}

{%- case icon -%}
  {%- when 'menu' -%}
    <svg xmlns="http://www.w3.org/2000/svg" width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="4" x2="20" y1="12" y2="12"></line>
      <line x1="4" x2="20" y1="6" y2="6"></line>
      <line x1="4" x2="20" y1="18" y2="18"></line>
    </svg>

  {%- when 'x' or 'close' -%}
