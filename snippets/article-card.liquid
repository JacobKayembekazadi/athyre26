{%- comment -%}
  Article card snippet
  Usage: {% render 'article-card', article: article %}
{%- endcomment -%}

<article class="article-card">
  <a href="{{ article.url }}" class="article-card__link">
    <div class="article-card__image">
      {%- if article.image -%}
        <img
          src="{{ article.image | image_url: width: 600 }}"
          alt="{{ article.title | escape }}"
          loading="lazy"
        >
      {%- else -%}
        {{ 'lifestyle-1' | placeholder_svg_tag }}
      {%- endif -%}
      <span class="article-card__category">{{ article.tags.first | default: 'Journal' }}</span>
      {%- if article.tags contains 'playlist' -%}
        <span class="article-card__play-icon">
          {% render 'icon', icon: 'play', size: 32 %}
        </span>
      {%- endif -%}
    </div>
    <div class="article-card__content">
      <h3 class="article-card__title">{{ article.title }}</h3>
      <p class="article-card__excerpt">{{ article.excerpt_or_content | strip_html | truncate: 100 }}</p>
      <div class="article-card__meta">
        <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
      </div>
    </div>
  </a>
</article>

<style>
  .article-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .article-card__image {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: #f3f4f6;
    margin-bottom: 0.75rem;
    border-radius: 0.5rem;
  }

  @media (min-width: 768px) {
    .article-card__image {
      margin-bottom: 1.5rem;
      border-radius: 0;
    }
  }

  .article-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }

  .article-card__link:hover .article-card__image img {
    transform: scale(1.05);
  }

  .article-card__category {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    padding: 0.25rem 0.5rem;
    font-size: 0.5rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    background: #fff;
    color: #000;
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
  }

  @media (min-width: 768px) {
    .article-card__category {
      top: 1rem;
      left: 1rem;
      padding: 0.375rem 0.75rem;
      font-size: 0.5625rem;
      letter-spacing: 0.2em;
    }
  }

  .article-card__play-icon {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    opacity: 0.9;
  }

  .article-card__title {
    font-size: 0.875rem;
    font-weight: 700;
    line-height: 1.4;
    margin: 0 0 0.25rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s;
  }

  @media (min-width: 768px) {
    .article-card__title {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
    }
  }

  .article-card__link:hover .article-card__title {
    color: #6b7280;
  }

  .article-card__excerpt {
    display: none;
    color: #6b7280;
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0 0 1rem;
  }

  @media (min-width: 768px) {
    .article-card__excerpt {
      display: block;
    }
  }

  .article-card__meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.5625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #9ca3af;
  }

  @media (min-width: 768px) {
    .article-card__meta {
      font-size: 0.625rem;
      letter-spacing: 0.1em;
    }
  }
</style>
