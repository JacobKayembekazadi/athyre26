[
  {
    "name": "theme_info",
    "theme_name": "ATHYRE Theme",
    "theme_version": "1.0.0",
    "theme_author": "ATHYRE",
    "theme_documentation_url": "https://athyre.com/support",
    "theme_support_email": "support@athyre.com"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "min": 50,
        "max": 250,
        "step": 10,
        "unit": "px",
        "default": 120
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Background colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_background_alt",
        "label": "Alternate background",
        "default": "#f9fafb"
      },
      {
        "type": "header",
        "content": "Text colors"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_text_light",
        "label": "Light text color",
        "default": "#9ca3af"
      },
      {
        "type": "header",
        "content": "Border colors"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border color",
        "default": "#f3f4f6"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading font",
        "default": "inter_n7"
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body font",
        "default": "inter_n4"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram URL",
        "placeholder": "https://instagram.com/athyre"
      },
      {
        "type": "text",
        "id": "social_facebook",
        "label": "Facebook URL",
        "placeholder": "https://facebook.com/athyre"
      },
      {
        "type": "text",
        "id": "social_twitter",
        "label": "Twitter/X URL",
        "placeholder": "https://twitter.com/athyre"
      },
      {
        "type": "text",
        "id": "social_youtube",
        "label": "YouTube URL",
        "placeholder": "https://youtube.com/athyre"
      },
      {
        "type": "text",
        "id": "social_tiktok",
        "label": "TikTok URL",
        "placeholder": "https://tiktok.com/@athyre"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_drawer_enabled",
        "label": "Enable cart drawer",
        "default": true,
        "info": "Show cart as slide-out drawer instead of page"
      },
      {
        "type": "text",
        "id": "cart_free_shipping_threshold",
        "label": "Free shipping threshold",
        "default": "150",
        "info": "Amount for free shipping message (leave blank to hide)"
      }
    ]
  }
]
