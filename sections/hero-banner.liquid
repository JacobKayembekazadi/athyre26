<section class="hero section-{{ section.id }}">
  {%- comment -%} Background Image {%- endcomment -%}
  <div class="hero__background">
    {%- if section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 1920 | image_tag:
        class: 'hero__image',
        loading: 'eager',
        fetchpriority: 'high'
      }}
    {%- else -%}
      <div class="hero__placeholder"></div>
    {%- endif -%}
    <div class="hero__overlay"></div>
    <div class="hero__gradient"></div>
  </div>

  {%- comment -%} Content {%- endcomment -%}
  <div class="hero__content">
    <div class="container">
      {%- if section.settings.subheading != blank -%}
        <span class="hero__subheading animate-fade-in" style="animation-delay: 0.2s;">
          {{ section.settings.subheading }}
        </span>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h1 class="hero__heading animate-fade-in" style="animation-delay: 0.4s;">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}

      {%- if section.settings.button_text != blank -%}
        <div class="hero__button-wrapper animate-fade-in" style="animation-delay: 0.6s;">
          <a href="{{ section.settings.button_link }}" class="hero__button">
            {{ section.settings.button_text }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Scroll Indicator {%- endcomment -%}
  {%- if section.settings.show_scroll_indicator -%}
    <div class="hero__scroll-indicator">
      <div class="hero__scroll-line"></div>
    </div>
  {%- endif -%}
</section>

{% style %}
  .section-{{ section.id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ section.settings.min_height_mobile }}vh;
    overflow: hidden;
    background-color: #000;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} {
      min-height: {{ section.settings.min_height }}vh;
    }
  }

  .section-{{ section.id }} .hero__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .section-{{ section.id }} .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ section.settings.image_opacity | divided_by: 100.0 }};
    transform: scale(1.05);
  }

  .section-{{ section.id }} .hero__placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
  }

  .section-{{ section.id }} .hero__overlay {
    position: absolute;
    inset: 0;
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .section-{{ section.id }} .hero__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent, transparent);
  }

  .section-{{ section.id }} .hero__content {
    position: relative;
    z-index: 10;
    text-align: {{ section.settings.text_alignment }};
    color: {{ section.settings.text_color }};
    padding: 2rem 1rem;
  }

  .section-{{ section.id }} .hero__subheading {
    display: inline-block;
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 1rem;
    opacity: 0;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} .hero__subheading {
      font-size: 0.75rem;
    }
  }

  .section-{{ section.id }} .hero__heading {
    font-size: 3rem;
    font-weight: 900;
    line-height: 0.95;
    letter-spacing: -0.05em;
    margin-bottom: 2rem;
    opacity: 0;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} .hero__heading {
      font-size: 6rem;
    }
  }

  @media (min-width: 1024px) {
    .section-{{ section.id }} .hero__heading {
      font-size: 8rem;
    }
  }

  .section-{{ section.id }} .hero__button-wrapper {
    opacity: 0;
  }

  .section-{{ section.id }} .hero__button {
    display: inline-block;
    padding: 1rem 3rem;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background-color: #fff;
    color: #000;
    text-decoration: none;
    transition: all 0.2s;
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1);
  }

  .section-{{ section.id }} .hero__button:hover {
    background-color: #e5e7eb;
  }

  .section-{{ section.id }} .hero__scroll-indicator {
    position: absolute;
    bottom: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0.5;
    animation: bounce 1s infinite;
  }

  .section-{{ section.id }} .hero__scroll-line {
    width: 1px;
    height: 3rem;
    background-color: #fff;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateX(-50%) translateY(-25%);
    }
    50% {
      transform: translateX(-50%) translateY(0);
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Introducing The Rise Collection"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "MOVE WITH<br>PURPOSE"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop The Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "image_opacity",
      "label": "Image opacity",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 60
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 0
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "min_height",
      "label": "Minimum height (desktop)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 100
    },
    {
      "type": "range",
      "id": "min_height_mobile",
      "label": "Minimum height (mobile)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 100
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
