<section class="featured-collection section-{{ section.id }}">
  <div class="container">
    <div class="featured-collection__header">
      <div>
        {%- if section.settings.subheading != blank -%}
          <span class="featured-collection__subheading">{{ section.settings.subheading }}</span>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="featured-collection__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
      </div>
      {%- if section.settings.show_view_all and section.settings.collection != blank -%}
        <a href="{{ section.settings.collection.url }}" class="featured-collection__view-all">
          View All
        </a>
      {%- endif -%}
    </div>

    <div class="featured-collection__grid">
      {%- if section.settings.collection != blank -%}
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..section.settings.products_to_show) -%}
          <div class="product-card product-card--placeholder">
            <div class="product-card__image-wrapper">
              {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
            </div>
            <div class="product-card__info">
              <div class="product-card__header">
                <h3 class="product-card__title">Product Title</h3>
                <p class="product-card__price">$99</p>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% style %}
  .section-{{ section.id }} {
    padding: {{ section.settings.padding_top_mobile }}px 1rem {{ section.settings.padding_bottom_mobile }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} {
      padding: {{ section.settings.padding_top }}px 1.5rem {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }} .featured-collection__header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} .featured-collection__header {
      margin-bottom: 4rem;
    }
  }

  .section-{{ section.id }} .featured-collection__subheading {
    display: block;
    font-size: 0.5625rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #9ca3af;
    margin-bottom: 0.25rem;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} .featured-collection__subheading {
      font-size: 0.625rem;
      letter-spacing: 0.3em;
      margin-bottom: 0.5rem;
    }
  }

  .section-{{ section.id }} .featured-collection__heading {
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -0.05em;
    margin: 0;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} .featured-collection__heading {
      font-size: 3rem;
    }
  }

  .section-{{ section.id }} .featured-collection__view-all {
    font-size: 0.625rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: inherit;
    text-decoration: none;
    border-bottom: 2px solid currentColor;
    padding-bottom: 0.25rem;
    white-space: nowrap;
    transition: opacity 0.2s;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} .featured-collection__view-all {
      font-size: 0.75rem;
      letter-spacing: 0.1em;
    }
  }

  .section-{{ section.id }} .featured-collection__view-all:hover {
    opacity: 0.5;
  }

  .section-{{ section.id }} .featured-collection__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  @media (min-width: 768px) {
    .section-{{ section.id }} .featured-collection__grid {
      gap: 1.5rem 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .section-{{ section.id }} .featured-collection__grid {
      grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
      gap: 1.5rem 1.5rem;
    }
  }

  .section-{{ section.id }} .product-card--placeholder .product-card__placeholder {
    width: 100%;
    height: 100%;
  }
{% endstyle %}

{% schema %}
{
  "name": "Featured collection",
  "tag": "section",
  "class": "featured-collection-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Performance Wear"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "THE RISE COLLECTION"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' link",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f9fafb"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding (desktop)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding (desktop)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 96
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top padding (mobile)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Bottom padding (mobile)",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "Featured collection"
    }
  ]
}
{% endschema %}
